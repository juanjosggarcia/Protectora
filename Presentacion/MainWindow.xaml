<Window x:Class="Protectora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Protectora"
        mc:Ignorable="d"
		Icon="/recursos/pawprint.ico"
        Title="Inicio" Height="650" Width="900">
   <Window.Background>
        <ImageBrush ImageSource="/recursos/fondo.jpg"/>
    </Window.Background>

    <Border  BorderBrush="Black" Background="#f1eee2" Margin="220,161,220,169" BorderThickness="3" CornerRadius="6" >

        <Grid x:Name="pnlInicioSesion" Margin="0,0,-2,-1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="148" />
                <ColumnDefinition Width="148" />
                <ColumnDefinition Width="148"/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>

                <RowDefinition Height="4" />
                <RowDefinition Height="217"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Image x:Name="imgAvatar"
               Margin="36,30,36,107" 
               Source="/recursos/login.png" RenderTransformOrigin="0.724,0.5" Grid.Column="1" Grid.Row="1">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="-34.048"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>

            
            <Label Content="Usuario:" FontFamily="Lucida Sans Unicode"  FontWeight="Bold" Margin="113,136,0,50.8" HorizontalAlignment="Left" Width="79" FontSize="15" Grid.ColumnSpan="2" Grid.Row="1" />
            <TextBox x:Name ="Usuario" Grid.Column="1" Margin="70,144,104,51" Grid.ColumnSpan="2" Grid.Row="1"/>
            <Label Content="Contraseña:"  FontFamily="Lucida Sans Unicode"  FontWeight="Bold" Margin="113,171,70.6,15.8" RenderTransformOrigin="0.45,1.265" FontSize="15" Grid.ColumnSpan="2" Grid.Row="1"/>
            <PasswordBox x:Name ="Contrasenia" Grid.Column="1" HorizontalAlignment="Left" Margin="70,179,0,16" Grid.Row="1" VerticalAlignment="Center" Width="124" Grid.ColumnSpan="2" Height="22"/>

            <Button Name="BtnIniciarSesion" Content="Iniciar Sesión" BorderThickness="2" BorderBrush="Black" Background="#a4c3a2" HorizontalAlignment="Left" Height="42" Margin="25.2,8.2,0,0" VerticalAlignment="Top" Width="103" RenderTransformOrigin="0.6,0.5" Grid.Column="1" Grid.Row="2" Click="BtnIniciarSesion_Click" FontFamily="Lucida Sans Unicode" FontWeight="Bold">

                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Label Content="Olvidaste tu contraseña?" Grid.Column="2" HorizontalAlignment="Left" Height="30" Margin="0,34,0,0" VerticalAlignment="Top" Width="146" FontSize="12" Grid.Row="2"/>
            <ComboBox IsReadOnly="True" IsEditable="True" HorizontalAlignment="Left" Height="25" Margin="10,6,0,0" VerticalAlignment="Top" Width="114" Text="Idioma" Grid.Row="1" >
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/recursos/spain.png" Height="20" Width="33" />
                        <TextBlock FontSize="13" Foreground="black">Español</TextBlock>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/recursos/united-kingdom.png" Height="20" Width="33" />
                        <TextBlock  FontSize="13" Foreground="black">English</TextBlock>
                    </StackPanel>
                </ComboBoxItem>
            </ComboBox>

        </Grid>
    </Border>



</Window>